		<jump-sound-id value="Player_Jump.wav"/>
		<hurt-sound-id value="Player_Hurt.wav"/>
		<die-sound-id value="Player_Die.wav"/>
		<!---animation-->
		<animator start-with="Player_Idle" default-speed="100" loop ="true">
			<anim name="Player_Idle" size-x ="70" size-y="70">
				<sprite offset-x ="0" offset-y="0"/>
			</anim>
			<anim name="Player_Idle_2" size-x ="70" size-y="70">
				<sprite offset-x ="2" offset-y="0"/>
				<sprite offset-x ="3" offset-y="0"/>
				<sprite offset-x ="4" offset-y="0"/>
			</anim>
			<anim name="Player_Crouch" size-x ="70" size-y="70">
				<sprite offset-x ="6" offset-y="0"/>
			</anim>
			<anim name="Player_Move" size-x ="70" size-y="70">
				<sprite offset-x ="0" offset-y="1"/>
				<sprite offset-x ="1" offset-y="1"/>
				<sprite offset-x ="2" offset-y="1"/>
				<sprite offset-x ="3" offset-y="1"/>
				<sprite offset-x ="4" offset-y="1"/>
				<sprite offset-x ="5" offset-y="1"/>
			</anim>
			<anim name="Player_Jump_Rise" size-x ="70" size-y="70">
				<sprite offset-x ="0" offset-y="2"/>
			</anim>
			<anim name="Player_Jump_Fall" size-x ="70" size-y="70">
				<sprite offset-x ="0" offset-y="3"/>
			</anim>
			<anim name="Player_Fall_Attack" size-x ="70" size-y="70">
				<sprite offset-x ="0" offset-y="4"/>
			</anim>
			<anim name="Player_Attack" size-x ="70" size-y="70">
				<sprite offset-x ="0" offset-y="5"/>
				<sprite offset-x ="1" offset-y="5"/>
				<sprite offset-x ="2" offset-y="5"/>
				<sprite offset-x ="3" offset-y="5"/>
			</anim>
			<anim name="Player_Climb" size-x ="70" size-y="70">
				<sprite offset-x ="1" offset-y="6"/>
				<sprite offset-x ="1" offset-y="6"/>
				<sprite offset-x ="2" offset-y="6"/>
				<sprite offset-x ="2" offset-y="6"/>
			</anim>
			<anim name="Player_Exit_Climb" size-x ="70" size-y="70">
				<sprite offset-x ="0" offset-y="6"/>
			</anim>
			<anim name="Player_Dead_Air" size-x ="70" size-y="70">
				<sprite offset-x ="0" offset-y="7"/>
			</anim>
			<anim name="Player_Dead_Ground" size-x ="70" size-y="70">
				<sprite offset-x ="1" offset-y="7"/>
				<sprite offset-x ="2" offset-y="7"/>
				<sprite offset-x ="3" offset-y="7"/>
			</anim>
		</animator>
	</player>
	<beeto>
