<entities>
	<player>
		<!---speed-->
		<speed value="360"/>
		<ladder-speed value="160"/>
		<max-fall-speed value="100.0f"/>
		<!---jump-->
		<jump-force value="2.7f"/>
		<fall-attack-jump-multiplier value="1.0f"/>
		<!---health-->
		<player-health value="20"/>
		<!---gravity-->
		<default-gravity value="1.0f"/>
		<fall-gravity value="2.5f"/>
		<fall-attack-gravity value="2.75f"/>
		<!---damage-->
		<attack-damage value="1"/>
		<!---times-->
		<coyote-reaction-ms value="100"/>
		<attack-recover-ms value="400"/>
		<exit-ladder-time-ms value="100"/>
		<jump-recover-ms value="150"/>
